{
	"name": "enact-template",
	"version": "1.0.0",
	"description": "Enact Template",
	"author": "LG Electronics, Inc.",
	"main": "src/index.js",
	"scripts": {
		"build": "npm run pack -- --production --isomorphic --snapshot --locales=tv",
		"clean": "enact clean",
		"format": "prettier --write \"src/**/*.js?(x)\"",
		"lint": "enact lint src",
		"pack": "enact pack",
		"pack:p": "npm run pack -- --production",
		"serve": "enact serve",
		"start": "npm run serve",
		"test": "enact test",
		"test:all": "npm test -- --coverage --verbose --silent",
		"test:coverage": "npm test -- --coverage",
		"test:watch": "npm test -- --watch"
	},
	"license": "UNLICENSED",
	"private": true,
	"repository": "",
	"enact": {
		"isomorphic": true,
		"theme": "sandstone",
		"deep": [
			"(window.webOSSystem && window.webOSSystem.highContrast === 'on')"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}",
			"!src/index.js",
			"!src/libs/log.js",
			"!src/reducers/index.js"
		]
	},
	"dependencies": {
		"@enact/core": "^4.1.2",
		"@enact/i18n": "^4.1.2",
		"@enact/sandstone": "^2.1.2",
		"@enact/spotlight": "^4.1.2",
		"@enact/ui": "^4.1.2",
		"@enact/webos": "^4.1.2",
		"@reduxjs/toolkit": "^1.7.1",
		"ilib": "^14.11.1",
		"prop-types": "^15.8.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.6",
		"redux": "^4.1.2"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/react": "^12.1.2",
		"eslint-config-enact-proxy": "^1.0.3",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.1",
		"husky": "^4.3.8",
		"jest-cucumber": "^3.0.1",
		"lint-staged": "^12.1.7",
		"prettier": "^2.5.1",
		"redux-logger": "^3.0.6",
		"typescript": "^4.5.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && npm run test:all && lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.js": [
			"npm run lint -- --fix"
		]
	}
}
