{
	"name": "enact-template",
	"version": "1.0.0",
	"description": "Enact Template",
	"author": "LG Electronics, Inc.",
	"main": "src/index.js",
	"scripts": {
		"build": "npm run pack -- --production --isomorphic --snapshot --locales=tv",
		"clean": "enact clean",
		"format": "prettier --write \"**/*.js?(x)\"",
		"lint": "enact lint --strict",
		"pack": "enact pack",
		"pack:p": "npm run pack -- --production",
		"serve": "enact serve",
		"start": "npm run serve",
		"test": "enact test",
		"test:all": "npm test -- --coverage --verbose --silent",
		"test:coverage": "npm test -- --coverage",
		"test:watch": "npm test -- --watch"
	},
	"license": "UNLICENSED",
	"private": true,
	"repository": "",
	"engines": {
		"node": ">=14",
		"npm": ">=7"
	},
	"enact": {
		"isomorphic": true,
		"theme": "sandstone"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}",
			"!src/index.js",
			"!src/libs/log.js",
			"!src/reducers/index.js"
		]
	},
	"dependencies": {
		"@enact/core": "^4.5.0-alpha.1",
		"@enact/i18n": "^4.5.0-alpha.1",
		"@enact/sandstone": "^2.5.0-alpha.1",
		"@enact/spotlight": "^4.5.0-alpha.1",
		"@enact/ui": "^4.5.0-alpha.1",
		"@enact/webos": "^4.5.0-alpha.1",
		"@reduxjs/toolkit": "^1.8.1",
		"ilib": "^14.14.0",
		"prop-types": "^15.8.1",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-redux": "^8.0.1",
		"redux": "^4.2.0"
	},
	"devDependencies": {
		"eslint-config-enact-proxy": "^1.0.4",
		"husky": "^4.3.8",
		"jest-cucumber": "^3.0.1",
		"lint-staged": "^12.4.0",
		"prettier": "^2.6.2",
		"redux-logger": "^3.0.6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && npm run test:all && lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.js": [
			"npm run lint"
		]
	}
}
